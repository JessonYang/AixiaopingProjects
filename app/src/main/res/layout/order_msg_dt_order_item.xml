<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/order_msg_dt_order_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/order_msg_dt_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/order_msg_dt_order_icon"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/order_msg_dt_order_icon">

            <TextView
                android:id="@+id/order_msg_dt_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2b47"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_msg_dt_order_extraDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/order_msg_dt_order_price"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/order_msg_dt_order_price"
                android:textColor="#ff2b47"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/order_msg_dt_order_price"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/order_msg_dt_order_extraDesc">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮费:"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/order_msg_dt_order_freightPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/order_item_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_msg_dt_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#999999"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/order_msg_dt_order_more"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/icon_chakangengduo" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#dddddd" />
    </RelativeLayout>
</LinearLayout>