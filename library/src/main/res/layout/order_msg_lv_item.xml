<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ececec"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/order_msg_time_bg"
        android:gravity="center_vertical"
        android:text="12:40"
        android:textColor="#ffffff"
        android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/layer_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="订单已发货"
                    android:textColor="#398fe2"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_express_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="(圆通快递)"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/order_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/icon_morentouxiang" />

                <TextView
                    android:id="@+id/order_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/order_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/order_icon"
                    android:lineSpacingExtra="5dp"
                    android:text="定做水杯刻字水杯印字玻璃杯定制玻璃杯水印杯logo定制广告杯礼品杯"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/order_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/order_icon"
                    android:text="订单编号:1234567891230"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </RelativeLayout>
        </LinearLayout>

</LinearLayout>