<?xml version="1.0" encoding="utf-8"?>

<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/home_edge">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="25%w">

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="36dp"
            android:layout_height="match_parent">

            <View
                android:layout_width="@dimen/home_slip_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/home_slip_top_bottom_margin"
                android:layout_marginTop="@dimen/home_slip_top_bottom_margin"
                android:background="@color/main_color_red" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="特卖汇"
                android:textColor="@color/main_color_red"
                android:textSize="@dimen/h7" />

        </RelativeLayout>

        <com.weslide.lovesmallscreen.views.Banner
            android:id="@+id/banner_option_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rl_left"></com.weslide.lovesmallscreen.views.Banner>

    </RelativeLayout>

</com.zhy.android.percent.support.PercentFrameLayout>

