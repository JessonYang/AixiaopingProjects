<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/home_edge"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_seller_layout" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gl_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:orientation="horizontal">

        <com.weslide.lovesmallscreen.views.home.SellerItemScoreGoodsView
            android:id="@+id/goods_score_1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"></com.weslide.lovesmallscreen.views.home.SellerItemScoreGoodsView>

        <com.weslide.lovesmallscreen.views.home.SellerItemScoreGoodsView
            android:id="@+id/goods_score_2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1">

        </com.weslide.lovesmallscreen.views.home.SellerItemScoreGoodsView>

        <com.weslide.lovesmallscreen.views.home.SellerItemScoreGoodsView
            android:id="@+id/goods_score_3"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1">

        </com.weslide.lovesmallscreen.views.home.SellerItemScoreGoodsView>

    </android.support.v7.widget.GridLayout>


</LinearLayout>