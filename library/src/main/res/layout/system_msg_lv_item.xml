<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/system_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_morentouxiang" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/system_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msg_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统消息"
                android:layout_toRightOf="@id/system_icon"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/system_msg_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/system_icon"
                android:layout_marginTop="7dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginRight="6dp"
                android:text="版本V5.5.5更新说明"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/system_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="昨天"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/system_msg_unread_count"
            android:visibility="gone"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/system_msg_time"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/system_msg_unread_count_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </RelativeLayout>

</LinearLayout>